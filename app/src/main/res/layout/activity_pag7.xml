<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pag7"
    android:background="@color/black"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="400dp"
    android:layout_height="90dp"
    android:layout_marginTop="30dp">
    <ImageView
        android:layout_width="100dp"
        android:layout_marginTop="10dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-10dp"
        android:src="@drawable/arrow">
    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Song Title"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="-10dp"
        android:textColor="@color/white"
        android:textSize="50dp"></TextView>
</LinearLayout>
<LinearLayout
    android:layout_width="200dp"
    android:layout_height="90dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="By Artist"
        android:layout_marginTop="-5dp"
        android:layout_marginStart="20dp"
        android:textColor="#FF9800"
        android:textSize="40dp"></TextView>
</LinearLayout>
<LinearLayout
    android:layout_width="400dp"
    android:layout_height="80dp"
    android:layout_marginTop="25dp">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/account_icon"></ImageView>

    <TextView
        android:layout_width="304dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/brown"
        android:text="What an amazing song"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23dp"></TextView>
</LinearLayout>
<LinearLayout
    android:layout_width="400dp"
    android:layout_height="70dp"
    android:layout_marginTop="150dp">
    <EditText
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@drawable/brown"
        android:text="Post a comment"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"></EditText>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:src="@drawable/enter"></ImageView>
</LinearLayout>

<LinearLayout
    android:layout_width="410dp"
    android:layout_height="100dp"
    android:layout_marginTop="30dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/grey"></ImageView>
</LinearLayout>
<RelativeLayout
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:layout_marginTop="-87dp"
    android:layout_marginLeft="4dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:src="@drawable/heart"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck"></ImageView>
</RelativeLayout>

<RelativeLayout
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:layout_marginTop="-40dp"
    android:layout_marginLeft="100dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:src="@drawable/plus"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck"></ImageView>
</RelativeLayout>

<RelativeLayout
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:layout_marginTop="-40dp"
    android:layout_marginLeft="180dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:src="@drawable/search"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck"></ImageView>
</RelativeLayout>

<RelativeLayout
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:layout_marginTop="-40dp"
    android:layout_marginLeft="300dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:src="@drawable/listen_later"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck"></ImageView>
</RelativeLayout>
<LinearLayout
    android:layout_width="400dp"
    android:layout_height="30dp"
    android:layout_marginTop="10dp">
    <TextView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="Liked"
        android:textSize="20dp"
        android:textColor="@color/white"></TextView>

    <TextView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:text="Add"
        android:textSize="20dp"
        android:textColor="@color/white"></TextView>

    <TextView
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:text="Search"
        android:textSize="20dp"
        android:textColor="@color/white"></TextView>

    <TextView
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:text="ListenLater"
        android:textSize="20dp"
        android:textColor="@color/white"></TextView>
</LinearLayout>
</LinearLayout>