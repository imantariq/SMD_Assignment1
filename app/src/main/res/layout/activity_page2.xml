<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page2"
    android:background="@color/black"
    android:orientation="vertical">


    <Button
        android:id="@+id/button"
        android:layout_marginTop="10dp"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:layout_marginLeft="260dp"
        android:textSize="20dp"
        android:text="Sign In" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="-15dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="290dp"
            android:src="@drawable/musify"></ImageView>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Musify"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:layout_marginRight="120dp"
        android:layout_marginLeft="15dp"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp">

    </LinearLayout>

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/editTextTextPersonName1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textColor="#FFC107"
        android:text="Name"
        android:textSize="17dp"
        android:padding="10dp"
        android:background="@drawable/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">

    </LinearLayout>

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textColor="#FFC107"
        android:text="Email"
        android:textSize="17dp"
        android:padding="10dp"
        android:background="@drawable/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">

    </LinearLayout>

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textColor="#FFC107"
        android:text="Password"
        android:textSize="17dp"
        android:padding="10dp"
        android:background="@drawable/white"
        >
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Gender"
        android:layout_marginTop="10dp"
        android:layout_marginRight="300dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textColor="#FFC107"></TextView>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/male"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="40dp"
                android:clickable="true"
                android:src="@drawable/male"
                tools:ignore="SpeakableTextPresentCheck"></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/female"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:clickable="true"
                android:src="@drawable/female_icon"
                tools:ignore="SpeakableTextPresentCheck"></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/not"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginRight="110dp"
                android:clickable="true"
                android:src="@drawable/prefer_not_to_say_gender"
                tools:ignore="SpeakableTextPresentCheck"></ImageView>
        </RelativeLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I would like to recieve your newsletter and other promotional information."
        android:textColor="@color/white"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="400dp"
        android:layout_height="60dp">

        <Button
            android:id="@+id/button3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/yellow"
            android:text="Sign Up "
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>