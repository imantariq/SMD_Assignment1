<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page4"
    android:background="@color/black"
    android:orientation="vertical">
     <Button
            android:id="@+id/button"
            android:layout_marginTop="10dp"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/black"
            android:layout_marginLeft="260dp"
            android:textSize="20dp"
            android:text="Sign In" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/musify"
                android:layout_marginRight="290dp"></ImageView>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Musify"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="15dp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="20dp">
        </LinearLayout>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:clickable="true"
        android:src="@drawable/fb_but"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="20dp">
    </LinearLayout>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:clickable="true"
        android:src="@drawable/google_but"
        tools:ignore="SpeakableTextPresentCheck"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="20dp">
    </LinearLayout>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:clickable="true"
        android:src="@drawable/create_acc"
        tools:ignore="SpeakableTextPresentCheck"></ImageView>

</LinearLayout>