<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page17"
    android:background="@color/black"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="400dp"
    android:layout_height="90dp"
    android:layout_marginTop="30dp">
    <TextView
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Song Title"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:textSize="38dp"></TextView>
    <ImageView
        android:layout_marginTop="-15dp"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:src="@drawable/downarrow"></ImageView>
</LinearLayout>
<TextView
    android:layout_width="140dp"
    android:layout_height="50dp"
    android:layout_marginTop="-35dp"
    android:textColor="#FF9800"
    android:text="By Artist"
    android:layout_marginLeft="20dp"
    android:textSize="30dp"></TextView>
<LinearLayout
    android:layout_width="400dp"
    android:layout_height="270dp"
    android:layout_marginTop="10dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/despacito"></ImageView>
</LinearLayout>

<LinearLayout
    android:layout_width="400dp"
    android:layout_height="60dp"
    android:layout_marginTop="15dp">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/prev"></ImageView>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="-20dp"
        android:src="@drawable/play"></ImageView>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="-20dp"
        android:src="@drawable/forward_arrow"></ImageView>
</LinearLayout>
<ImageView
    android:layout_width="300dp"
    android:layout_height="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="50dp"
    android:src="@drawable/progressbar"></ImageView>
<TextView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:text="1:25"
    android:textColor="#FF9800"
    android:layout_marginStart="50dp"
    android:textSize="20dp"></TextView>

<RelativeLayout
    android:layout_width="90dp"
    android:layout_height="100dp"
    android:layout_marginTop="-15dp"
    android:background="@drawable/grey">
</RelativeLayout>

<RelativeLayout
    android:layout_width="230dp"
    android:layout_height="100dp"
    android:layout_marginLeft="190dp"
    android:layout_marginTop="-110dp"
    android:background="@drawable/grey">

</RelativeLayout>

<RelativeLayout
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:layout_marginTop="-80dp"
    android:layout_marginLeft="4dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:src="@drawable/heart"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck"></ImageView>
</RelativeLayout>


<RelativeLayout
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:layout_marginTop="-40dp"
    android:layout_marginLeft="100dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:src="@drawable/plus"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck"
        ></ImageView>
</RelativeLayout>

<RelativeLayout
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:layout_marginTop="-40dp"
    android:layout_marginLeft="200dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:src="@drawable/search"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck"></ImageView>
</RelativeLayout>

<RelativeLayout
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:layout_marginTop="-40dp"
    android:layout_marginLeft="300dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:src="@drawable/listen_later"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck"></ImageView>
</RelativeLayout>
<LinearLayout
    android:layout_width="400dp"
    android:layout_height="30dp"
    android:layout_marginTop="10dp">
    <TextView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="Liked"
        android:textSize="20dp"
        android:textColor="@color/white"></TextView>

    <TextView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:text="Add"
        android:textSize="20dp"
        android:textColor="@color/white"></TextView>

    <TextView
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:text="Search"
        android:textSize="20dp"
        android:textColor="@color/white"></TextView>
    <TextView
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:text="ListenLater"
        android:textSize="20dp"
        android:textColor="@color/white"></TextView>
</LinearLayout>
</LinearLayout>